#include <stdio.h>



int main(void)

{

      int A1, B1, C1, D1, average, shiftDirection, shiftCount;

      

      printf("Please enter your English score for four people: \n");

      scanf("%d %d %d %d", &A1, &B1, &C1, &D1);



      average=(A1+B1+C1+D1)/4;



      printf("Average of four people's English scores: %d \n", average);



      printf("Enter one integer of 1(left), 2(right) and one integer less than 16: \n");

      scanf("%d %d",&shiftDirection, &shiftCount);



      shiftDirection==1? printf("First man shift result: %d\n",A1<<shiftCount):printf("");

   shiftDirection==2? printf("First man shift result: %d\n",A1>>shiftCount):printf("");

      shiftDirection==1? printf("Average shift result: %d\n",average<<shiftCount):printf("");

   shiftDirection==2? printf("Average shift result: %d\n",average>>shiftCount):printf("");



      return 0;

}
