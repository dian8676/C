#include<stdio.h> //4



int main(void)

{

 float tem;

 char cf;





 do





 { printf("입력한 온도가 화씨이면 F, 섭씨이면 C를 입력하시오 : ");

  scanf("%c",&cf);

  printf("온도를 입력하시오 : ");

  scanf("%f", &tem);

 

 



  switch(cf)

  {

  case 'f': case 'F':

   {

    tem=(tem-32.0)/(9.0/5.0);



    printf("섭씨온도로 변환하면 %.2f 입니다. \n",tem);

 

    break;

   }



  case 'c': case 'C':

   {

    tem=tem*9.0/5.0 + 32.0;



    printf("화씨온도로 변환하면 %.2f 입니다.\n",tem);



    break;

   }

  

  default:

   {

    printf("Error");

    break;

   }

  } 



 }while( cf=='x' || cf=='X');





 return 0;

}
